            <item>Optional</item>
            <label>xml:id</label>
            <item>Optional</item>
            <label>xml:lang</label>
            <item>Optional</item>
         </list>
      </p>
   </div>
   <div type="occurrence">
      <div type="mandatory">
         <p xml:lang="eng">Mandatory</p>
      </div>
      <div type="repeatable">
         <p xml:lang="eng">Repeatable</p>
